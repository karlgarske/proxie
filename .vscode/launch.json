{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API: Dev",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}",
      "command": "npm run dev:api"
    },
    {
      "name": "Client: Dev",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/client"
    }
  ],
  "compounds": [
    {
      "name": "Dev: Client + API",
      "configurations": ["API: Dev", "Client: Dev"]
    }
  ]
}

